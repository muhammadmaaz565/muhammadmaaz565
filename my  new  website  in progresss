  <script>
// JavaScript for slideshow
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');

        function showSlide(index) {
            currentSlide = (index + slides.length) % slides.length;
            document.querySelector('.slides').style.transform = `translateX(-${currentSlide * 100}%)`;
        }

        function moveSlide(direction) {
            showSlide(currentSlide + direction);
        }


        // JavaScript for section navigation
        function showSection(sectionId) {
            document.querySelectorAll('section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
        }
           // JavaScript for search bar
       
        // JavaScript for search functionality
document.querySelector('.search-icon').addEventListener('click', () => {
    document.querySelector('.search-container').classList.toggle('active');
    document.getElementById('searchBar').focus();
});

document.getElementById('searchBar').addEventListener('input', function() {
    const query = this.value.toLowerCase();
    const productCards = document.querySelectorAll('.product-card');

    productCards.forEach(card => {
        const title = card.querySelector('h3').textContent.toLowerCase();
        if (title.includes(query)) {
            card.style.display = 'block';
        } else {
            card.style.display = 'none';
        }
    });
});




function openModal(title, salePrice, regularPrice, description, sizes, imageUrl) {
    // Set modal content
    document.getElementById('modalTitle').textContent = title;
    document.getElementById('salePrice').textContent = `Sale Price: ${salePrice}`;
    document.getElementById('regularPrice').textContent = `Regular Price: ${regularPrice}`;
    document.getElementById('modalDescription').textContent = description;
    document.getElementById('modalImage').src = imageUrl;

    // Populate size options
    const sizeSelect = document.getElementById('sizeSelect');
    sizeSelect.innerHTML = '';
    sizes.forEach(size => {
        const option = document.createElement('option');
        option.value = size;
        option.textContent = size;
        sizeSelect.appendChild(option);
    });

    // Show the modal
    document.getElementById('productModal').style.display = 'flex';
}

function closeModal() {
    document.getElementById('productModal').style.display = 'none';
}

function addToCartFromModal() {
    const title = document.getElementById('modalTitle').textContent;
    const price = document.getElementById('salePrice').textContent.split(': ')[1];
    const size = document.getElementById('sizeSelect').value;
    const quantity = document.getElementById('quantity').value;

    alert(`${quantity} of ${title} (Size: ${size}) added to cart!`);
}
let cart = [];

function openModal(title, salePrice, regularPrice, description, sizes, imageUrl) {
    document.getElementById('modalTitle').textContent = title;
    document.getElementById('salePrice').textContent = `Sale Price: Rs. ${salePrice}`;
    document.getElementById('regularPrice').textContent = `Regular Price: Rs. ${regularPrice}`;
    document.getElementById('modalDescription').textContent = description;
    document.getElementById('modalImage').src = imageUrl;

    const sizeSelect = document.getElementById('sizeSelect');
    sizeSelect.innerHTML = '';
    sizes.forEach(size => {
        const option = document.createElement('option');
        option.value = size;
        option.textContent = size;
        sizeSelect.appendChild(option);
    });

    document.getElementById('productModal').style.display = 'flex';
}

function closeModal() {
    document.getElementById('productModal').style.display = 'none';
}

function addToCartFromModal() {
    const title = document.getElementById('modalTitle').textContent;
    const price = parseFloat(document.getElementById('salePrice').textContent.replace('Sale Price: Rs. ', ''));
    const size = document.getElementById('sizeSelect').value;
    const quantity = parseInt(document.getElementById('quantity').value);

    for (let i = 0; i < quantity; i++) {
        cart.push({ name: title, price: price, size: size });
    }
    updateCart();
    showSection('cart');
}

function updateCart() {
    const cartCount = document.getElementById('cartCount');
    const cartSummary = document.getElementById('cartSummary');
    cartCount.textContent = cart.length;

    if (cart.length > 0) {
        let totalPrice = cart.reduce((total, item) => total + item.price, 0);
        cartSummary.innerHTML = '<h3>Your Cart</h3>' +
            cart.map(item => `<p>${item.name} (Size: ${item.size}) - Rs. ${item.price}</p>`).join('') +
            `<p><strong>Total: Rs. ${totalPrice}</strong></p>` +
            `<button onclick="checkout()">Checkout</button>`;
    } else {
        cartSummary.innerHTML = '<h3>Your Cart is Empty</h3><p>Add products to your cart to see them here.</p>';
    }
    cartSummary.classList.add('active');
}

function checkout() {
    if (cart.length === 0) {
        alert('Your cart is empty. Please add items to the cart before checking out.');
        return;
    }

    let totalPrice = cart.reduce((total, item) => total + item.price, 0);
    let confirmationMessage = `You are purchasing the following items:\n\n`;
    cart.forEach((item, index) => {
        confirmationMessage += `${index + 1}. ${item.name} (Size: ${item.size}) - Rs. ${item.price}\n`;
    });
    confirmationMessage += `\nTotal Price: Rs. ${totalPrice}\n\n`;
    confirmationMessage += `Thank you for your purchase!`;

    alert(confirmationMessage);
    cart = [];
    updateCart();
}

function showSection(sectionId) {
    document.querySelectorAll('section').forEach(section => {
        section.style.display = 'none';
    });
    document.getElementById(sectionId).style.display = 'block';
}




</script>
