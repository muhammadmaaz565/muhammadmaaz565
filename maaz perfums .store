      .search-container {
        position: relative;
        display: flex;
        align-items: center;
        margin-right: 2rem;
    }

    /* Hide the search input initially */
    .search-input {
        width: 0;
        padding: 0.5rem;
        border: none;
        border-radius: 5px;
        background-color: #fff;
        transition: width 0.4s ease;
        box-shadow: 0 0 0 rgba(0, 0, 0, 0.1);
        opacity: 0;
        pointer-events: none;
        outline: none;
    }

    /* Style the search icon */
    .search-icon {
        font-size: 1.5rem;
        cursor: pointer;
        color: white;
    }

    /* Focus and expand the search input */
    .search-container.active .search-input {
        width: 200px;
        opacity: 1;
        pointer-events: all;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
        }

      

        .cart-icon {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.5rem;
            cursor: pointer;
            color: white;
        }

        .cart-count {
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            position: absolute;
            top: -10px;
            right: -10px;
        }

        .slideshow {
            position: relative;
            width: 100%;
            max-width: 1200px;
            margin: 2rem auto;
            overflow: hidden;
            border-radius: 8px;
        }

        .slides {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }

        .slide {
            min-width: 100%;
            height: 400px;
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
        }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 1rem;
            cursor: pointer;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }

        section {
            padding: 2rem;
            display: none;
        }

        section.active {
            display: block;
        }

        h1 {
            margin-bottom: 1rem;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 2rem;
