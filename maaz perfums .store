        }

        /* Animation for flying to cart */
        @keyframes flyToCart {
            0% {
                transform: translate(0, 0);
                opacity: 1;
            }
            100% {
                transform: translate(500px, -500px);
                opacity: 0;
            }
        }

        .flying-image {
            position: absolute;
            z-index: 1000;
            animation: flyToCart 1s ease forwards;
        }
        @keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

#account.active {
